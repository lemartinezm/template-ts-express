{
  "name": "template-express-ts-api",
  "version": "0.0.1",
  "description": "Template for an API built with Express and TS",
  "main": "index.ts",
  "scripts": {
    "swagger": "tsoa spec",
    "test": "jest --verbose --silent --runInBand",
    "dev": "concurrently \"npx tsc --watch\" \"npm run swagger\" \" nodemon -q ./dist/index.js \"",
    "build:prod": "node esbuild.config.js",
    "start": "node ./dist/index.js"
  },
  "keywords": [
    "node",
    "express"
  ],
  "author": "Luis Martinez",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.10",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsoa": "^4.1.3",
    "typescript": "^4.8.4"
  }
}
